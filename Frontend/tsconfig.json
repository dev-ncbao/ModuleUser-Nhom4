{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },

    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
